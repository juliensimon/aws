{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Template to launch an Amazon Linux instance.",

  "Parameters": {
    "SecurityGroupParameter": {
      "Type": "String",
      "Description": "Enter the name of the security group"
    },
    "KeyPairParameter": {
      "Type": "String",
      "Description": "Enter the name of the key pair"
    }
  },


  "Mappings": {
    "RegionMap": {
      "ap-northeast-1": {
        "AMI": "ami-56d4ad31"
      },
      "ap-southeast-1": {
        "AMI": "ami-dc9339bf"
      },
      "ap-southeast-2": {
        "AMI": "ami-1c47407f"
      },
      "eu-west-1": {
        "AMI": "ami-70edb016"
      },
      "sa-east-1": {
        "AMI": "ami-80086dec"
      },
      "us-east-1": {
        "AMI": "ami-0b33d91d"
      },
      "us-west-1": {
        "AMI": "ami-165a0876"
      },
      "us-west-2": {
        "AMI": "ami-f173cc91"
      }
    }
  },

  "Resources": {
    "Ec2Instance1": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "t2.micro",
        "KeyName":
          {
            "Ref": "KeyPairParameter"
          }
        ,
        "SecurityGroups": [
          {
            "Ref": "SecurityGroupParameter"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "CFInstance1"
          }
        ]
      }
    }
  },

  "Outputs": {
    "EC2Instance0IpAddress": {
      "Description": "The public IP address of the instance",
      "Value": {
        "Fn::GetAtt": [
          "Ec2Instance1",
          "PublicIp"
        ]
      }
    },
    "EC2Instance0DNSName": {
      "Description": "The public DNS name of the instance",
      "Value": {
        "Fn::GetAtt": [
          "Ec2Instance1",
          "PublicDnsName"
        ]
      }
    }
  }
}
